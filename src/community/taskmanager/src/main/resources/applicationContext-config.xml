<?xml version="1.0" encoding="UTF-8"?>

<beans default-lazy-init="true" xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd" >
    
    <!-- Default is H2 file in data directory.
    To use external db, replace data source properties here or use properties file (see below) -->
    <bean id="wfDataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
    	<property name="driverClassName" value="org.h2.Driver" />
    	<property name="username" value="sa" />
    	<property name="password" value="" />
    	<!-- url is configured below -->
	</bean>  
  
